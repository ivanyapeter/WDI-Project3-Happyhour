<section class="info">
	<div class="detail">
		<div class="bar-list">
		<p class="location"><%= @location %></p>

			<% @bars.each do |bar| %>
				<h3><%= bar.name %></h3>
				<p><%= bar.address %></p>
				<a href="<%= bar.website %>"><%= bar.website %></a>
			<% end %>

		</div>
	</div>

	<div class="map">
		
	</div>
</section>

 <script id="bar-box-template" type="text/x-underscore-template">
    
      <img src={{ image_url }}>
      <header class="content">
        <h1>{{ name }}</h1>
      </header>
      
  </script>

<script>
 $('document').ready(initMap());
</script>